$fadeOff: left 0s 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4s;
$width: {{ settings.page_width }}px;
$bg: {{ settings.background_color}};
$text: {{ settings.text_color }};
$mediumText: {{ settings.medium_text_color }};
$border: {{ settings.border_color }};
$bp: 960px;

/* Reset */
*,
*::before,
*::after {
  box-sizing: inherit;
  margin: 0;
  padding: 0;
}

html{
  font-size: 62.5%;
  box-sizing: border-box;
}

body {
  background-color: $bg;
  color: $text;
  font-family: "Open Sans", sans-serif;
  font-size: 1.6rem;
}
img,
svg {
  width: 100%;
  display: block;
}
a {
  text-decoration: none;
}
li {
  list-style: none;
}
button,
input,
select,
text-area {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

/* Page Styles */
.container {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;

  @media screen and (min-width: $bp) {
    width: calc(100% - 80px);
  }
}

/* Header */
.header {
  background-color: $bg;
}
.header_flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header_logo {
  display: block;
}

.header_hamburger {
  width: 32px;
  display: block;
  cursor: pointer;
}
.header_hamburger_bar {
  height: 2px;
  width: 100%;
  background: $text;
  display: block;
  border-radius: 2px;

  & + & {
    margin-top: 6px;
  }

}
.header_nav_overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9;
  opacity: 0;
  left: -100%;
  transition: $fadeOff;
  .nav_active & {
    left: 0;
    opacity: 1;
    transition: $fadeOn;
  }
}
.header_nav {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  overflow: auto;
  background: $bg;
  width: 90%;
  max-width: 300px;
  z-index: 10;
  transform: translateX(-100%);
  transition: 0.4s transform;

  .nav_active & {
    transform: none;
  }
}
.header_nav_item {
  border-bottom: 1px solid $border;
  padding: 20px;
}
.header_nav_link{
  display: block;
  color: $text;
  font-size: 2rem;
}
.header_sub {
  padding: 0 20px;
  margin-top: 15px;
}
.header_sub_item{
  display: block;
  & + &{
    margin-top: 5px;
  }
}
.header_sub_link{
  display: inline-block;
  color: $mediumText;
  transition: 0.2s color;

  &:hover{
    color: $text;
  }
}

/* Hero */
.hero{
  background-color: #5e5e5e;
  padding: 200px 0;
  color: $text;
}